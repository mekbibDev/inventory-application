extends layout

block content
  if errors
    h1 Error:
      each error in errors
        h2 #{error.msg}
  fieldset 
    legend #{title} 
    form(method="post")
      label(for="categoryName") Name*:
      input(type="text" name="name" id="categoryName" minlength=2 maxlength=20 value!= name ? name : null required)
      label(for="categoryDescription") Description*:
      textarea(name="description" id="categoryDescription" minlength=10 maxlength=200 cols="30" rows="10" required ) !{description ? description : ""}
      button(type="submit") Submit
